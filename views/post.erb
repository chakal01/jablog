
  <h2><%= @post.title %></h2>

  <div id="blog_content">

    <div class="col-sm-12">
    <%= h @post.content.gsub("\n", "</br>") %> 
    </div>

<div class="col-sm-12">
  
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @post.images.each_with_index do |img, index| %>
        <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<%= index==0 ? 'active' : '' %>"></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @post.images.each_with_index do |img, index| %>
          <div class="item<%= (index == 0) ? ' active': '' %>">
            <img class="img-sized" src="/images/posts/<%= @post.id %>/<%= img.file %>">
          </div>
        <% end %>
      </div>

    </div>
    </div>

    <hr>

    <h3>Autres journ√©es</h3>

    <%= erb :other_posts %>
</div>

